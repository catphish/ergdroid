<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Session"
        android:id="@+id/start_button"
        android:onClick="startSession"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Session"
        android:id="@+id/stop_button"
        android:onClick="stopSession"
        android:layout_below="@+id/start_button"
        android:layout_alignLeft="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:enabled="false" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/stop_button"
        android:layout_toStartOf="@+id/stop_button">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m Split"
                android:id="@+id/speed_label"
                android:layout_column="0"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:textColor="#ffb0b0b0"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/speed_data"
                android:layout_column="2"
                android:textSize="40dp"
                android:layout_margin="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/time_label"
                android:layout_column="0"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:textColor="#ffb0b0b0"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/time_data"
                android:layout_column="2"
                android:textSize="40dp"
                android:layout_margin="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:id="@+id/distance_label"
                android:layout_column="0"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:textColor="#ffb0b0b0"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/distance_data"
                android:layout_column="2"
                android:textSize="40dp"
                android:layout_margin="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag Factor"
                android:id="@+id/drag_label"
                android:layout_column="0"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:textColor="#ffb0b0b0"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/drag_data"
                android:layout_column="2"
                android:textSize="40dp"
                android:layout_margin="10dp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>